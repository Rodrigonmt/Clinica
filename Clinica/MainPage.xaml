<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinica.MainPage"
             BackgroundColor="White">

    <Grid>

        <!-- Imagem de fundo -->
        <Image Source="fundo02.jpg"
               Aspect="AspectFill"
               Opacity="1"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand" />

        <!-- Layout principal dividido em seções -->
        <Grid Padding="20" RowSpacing="15">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- título -->
                <RowDefinition Height="2*"/>
                <!-- botão principal -->
                <RowDefinition Height="5*"/>
                <!-- grid com ícones -->
                <RowDefinition Height="2*"/>
                <!-- botão final -->
            </Grid.RowDefinitions>

            <!-- Título -->
            <Label Grid.Row="0"
                   Text="Barbearia Progresso"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White"
                   Margin="0,10,0,10" />

            <!-- Grid com ícones secundários -->
            <Grid Grid.Row="2"
                  VerticalOptions="End"
                  HorizontalOptions="Center"
                  RowSpacing="15"
                  ColumnSpacing="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ícone principal -->
                <Frame Grid.Row="0"
                       CornerRadius="15"
                       Padding="0"
                       Opacity="0.7"
                       BackgroundColor="WhiteSmoke"
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAgendarConsultaTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid>
                        <Image Source="icone_agendar.png"
                               HeightRequest="80"
                               WidthRequest="80"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Label Text="MARCAR HORÁRIO"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Consultas Agendadas -->
                <Frame Grid.Row="1"
                       Grid.Column="0"
                       CornerRadius="15"
                       Padding="0"
                       Opacity="0.7"
                       BackgroundColor="WhiteSmoke"
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnConsultasAgendadasTapped"/>
                    </Frame.GestureRecognizers>

                    <Grid>
                        <Image Source="icone_agendadas.png"
                               HeightRequest="80"
                               WidthRequest="80"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Label Text="HORÁRIOS AGENDADOS"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

                <!-- Histórico -->
                <Frame Grid.Row="2"
                       Grid.Column="1"
                       CornerRadius="15"
                       Padding="0"
                       Opacity="0.7"
                       BackgroundColor="WhiteSmoke"
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHistoricoConsultasAgendadasPage"/>
                    </Frame.GestureRecognizers>

                    <Grid>
                        <Image Source="icone_historico.png"
                               HeightRequest="80"
                               WidthRequest="80"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Label Text="HISTÓRICO"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Black"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Grid>
                </Frame>

            </Grid>

        </Grid>

    </Grid>

</ContentPage>
