<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinica.View.AgendarConsultaPage"
             BackgroundColor="White"
             Title="Agendar Horário">

    <VerticalStackLayout Padding="15" Spacing="10">


        <!-- Valor -->
        <HorizontalStackLayout Spacing="10"
                       Margin="0,10,0,0"
                       HorizontalOptions="Center">
            <Label Text="Valor Total:"
           FontAttributes="Bold"
           FontSize="18"/>

            <Label x:Name="lblValorTotal"
           Text="R$ 0,00"
           TextColor="#007AFF"
           FontAttributes="Bold"
           FontSize="18"/>
        </HorizontalStackLayout>

        <!-- Data -->
        <Label Text="Escolha a data:" FontSize="18" FontAttributes="Bold" TextColor="Black"/>        
        <DatePicker x:Name="datePicker"
                    Format="dd/MM/yyyy"
                    HorizontalOptions="FillAndExpand"
                    TextColor="Black"
                    BackgroundColor="#D0E8FF"/>

        <!-- Serviços -->
        <Label Text="Selecione os serviços desejados:" 
       FontSize="18" 
       FontAttributes="Bold"
       TextColor="Black"/>

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="20" RowSpacing="15" Padding="5">

            <!-- Cabelo -->
            <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="10" VerticalOptions="Center">
                <CheckBox x:Name="chkCabelo"
                          CheckedChanged="OnServicoChanged"/>
                <Label Text="Cabelo" FontSize="16" VerticalTextAlignment="Center" TextColor="Black"/>
            </HorizontalStackLayout>

            <!-- Barba -->
            <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="10" VerticalOptions="Center">
                <CheckBox x:Name="chkBarba"
                          CheckedChanged="OnServicoChanged"/>
                <Label Text="Barba" FontSize="16" VerticalTextAlignment="Center" TextColor="Black"/>
            </HorizontalStackLayout>

            <!-- Sobrancelha -->
            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="10" VerticalOptions="Center">
                <CheckBox x:Name="chkSobrancelha"
                          CheckedChanged="OnServicoChanged"/>
                <Label Text="Sobrancelha" FontSize="16" VerticalTextAlignment="Center" TextColor="Black"/>
            </HorizontalStackLayout>

            <!-- Coloração -->
            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="10" VerticalOptions="Center">
                <CheckBox x:Name="chkColoracao"
                          CheckedChanged="OnServicoChanged"/>
                <Label Text="Coloração" FontSize="16" VerticalTextAlignment="Center" TextColor="Black"/>
            </HorizontalStackLayout>

        </Grid>


        <!-- Médicos -->
        <Label Text="Escolha o Profissional:" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
        <ScrollView Orientation="Horizontal" HeightRequest="120">
            <HorizontalStackLayout Spacing="15" x:Name="medicosStack">

                <!-- Médico 1 -->
                <VerticalStackLayout WidthRequest="80" HorizontalOptions="Center" Spacing="5">
                    <Border x:Name="borderRodrigo"
                    StrokeThickness="4"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 40"
                    BackgroundColor="#D0E8FF"
                    HeightRequest="80"
                    WidthRequest="80">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMedicoTapped" CommandParameter="Rodrigo"/>
                        </Border.GestureRecognizers>
                        <Image Source="rodrigo.jpg"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
                    </Border>
                    <Label Text="Rodrigo" FontSize="14" TextColor="#007AFF" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Médico 2 -->
                <VerticalStackLayout WidthRequest="80" HorizontalOptions="Center" Spacing="5">
                    <Border x:Name="borderDienifer"
                    StrokeThickness="4"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 40"
                    BackgroundColor="#D0E8FF"
                    HeightRequest="80"
                    WidthRequest="80">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMedicoTapped" CommandParameter="Dienifer"/>
                        </Border.GestureRecognizers>
                        <Image Source="dienifer.jpg"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
                    </Border>
                    <Label Text="Dienifer" FontSize="14" TextColor="#007AFF" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Médico 3 -->
                <VerticalStackLayout WidthRequest="80" HorizontalOptions="Center" Spacing="5">
                    <Border x:Name="borderFernanda"
                    StrokeThickness="4"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 40"
                    BackgroundColor="#D0E8FF"
                    HeightRequest="80"
                    WidthRequest="80">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMedicoTapped" CommandParameter="Fernanda"/>
                        </Border.GestureRecognizers>
                        <Image Source="fernanda.jpg"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
                    </Border>
                    <Label Text="Fernanda" FontSize="14" TextColor="#007AFF" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Médico 4 -->
                <VerticalStackLayout WidthRequest="80" HorizontalOptions="Center" Spacing="5">
                    <Border x:Name="borderAmanda"
                    StrokeThickness="4"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 40"
                    BackgroundColor="#D0E8FF"
                    HeightRequest="80"
                    WidthRequest="80">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMedicoTapped" CommandParameter="Amanda"/>
                        </Border.GestureRecognizers>
                        <Image Source="amanda.jpg"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
                    </Border>
                    <Label Text="Amanda" FontSize="14" TextColor="#007AFF" HorizontalOptions="Center"/>
                </VerticalStackLayout>

            </HorizontalStackLayout>
        </ScrollView>

        <!-- Horário -->
        <Label Text="Escolha um horário disponível:" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
        <Picker x:Name="timePicker"
                Title="Selecione o horário"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="#D0E8FF"
                TextColor="Black">
            <Picker.Items>
                <x:String>08:00</x:String>
                <x:String>08:30</x:String>
                <x:String>09:00</x:String>
                <x:String>09:30</x:String>
                <x:String>10:00</x:String>
                <x:String>10:30</x:String>
                <x:String>11:00</x:String>
                <x:String>11:30</x:String>
                <x:String>14:00</x:String>
                <x:String>14:30</x:String>
                <x:String>15:00</x:String>
                <x:String>15:30</x:String>
                <x:String>16:00</x:String>
            </Picker.Items>
        </Picker>

        <!-- Botão -->
        <Border x:Name="btnAgendar"
        BackgroundColor="#007AFF"
        StrokeThickness="0"
        HeightRequest="50"
        Padding="10"
        HorizontalOptions="FillAndExpand"
        StrokeShape="RoundRectangle 10">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnAgendarConsultaClicked"/>
            </Border.GestureRecognizers>

            <Label Text="Confirmar Agendamento"
           TextColor="White"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           FontSize="18"
           FontAttributes="Bold"/>
        </Border>

        <!-- Observações -->
        <Label Text="Observações (opcional):" 
       FontSize="18" 
       FontAttributes="Bold" 
       TextColor="Black"/>

        <Editor x:Name="txtObservacoes"
        Placeholder="Digite alguma observação..."
        TextColor="Black"
        BackgroundColor="#D0E8FF"
        AutoSize="TextChanges"
        HeightRequest="120"/>
    </VerticalStackLayout>
</ContentPage>
