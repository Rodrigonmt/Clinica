<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinica.View.InfoHistoricoConsultaAgendadaPage"
             Shell.NavBarIsVisible="True">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Título -->
            <Label Text="Informações do Agendamentos"
               FontSize="26"
               FontAttributes="Bold"
               TextColor="#007AFF"
               HorizontalOptions="Center"/>

            <Frame CornerRadius="20"
       BackgroundColor="White"
       HasShadow="True"
       Padding="20">

                <Grid ColumnDefinitions="30,Auto,*"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
          RowSpacing="14">

                    <!-- DATA -->
                    <Image Grid.Row="0" Grid.Column="0" Source="calendar_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="Data:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="0" Grid.Column="2" x:Name="lblData" FontSize="16" FontAttributes="Bold"/>

                    <!-- HORA -->
                    <Image Grid.Row="1" Grid.Column="0" Source="clock_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="Hora:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="1" Grid.Column="2" x:Name="lblHora" FontSize="16"/>

                    <!-- MÉDICO -->
                    <Image Grid.Row="2" Grid.Column="0" Source="doctor_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="Médico:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="2" Grid.Column="2" x:Name="lblMedico" FontSize="16"/>

                    <!-- STATUS -->
                    <Image Grid.Row="3" Grid.Column="0" Source="status_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="Status:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="3" Grid.Column="2"
               x:Name="lblStatus"
               FontSize="16"
               FontAttributes="Bold"/>

                    <!-- SERVIÇO -->
                    <Image Grid.Row="4" Grid.Column="0" Source="servico_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="Serviço:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="4" Grid.Column="2" x:Name="lblServico" FontSize="16"/>

                    <!-- PAGAMENTO -->
                    <Image Grid.Row="5" Grid.Column="0" Source="payment_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="5" Grid.Column="1" Text="Pagamento:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="5" Grid.Column="2" x:Name="lblFormaPagamento" FontSize="16"/>

                    <!-- VALOR -->
                    <Image Grid.Row="6" Grid.Column="0" Source="money_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="6" Grid.Column="1" Text="Valor:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="6" Grid.Column="2"
               x:Name="lblValorTotal"
               FontSize="16"
               FontAttributes="Bold"/>

                    <!-- DURAÇÃO -->
                    <Image Grid.Row="7" Grid.Column="0" Source="time_icon.png" WidthRequest="22"/>
                    <Label Grid.Row="7" Grid.Column="1" Text="Duração:" FontSize="16" FontAttributes="Bold" TextColor="#888"/>
                    <Label Grid.Row="7" Grid.Column="2" x:Name="lblDuracao" FontSize="16"/>

                </Grid>
            </Frame>


            <!-- Observações -->
            <Label Text="Observações"
               FontSize="20"
               TextColor="Black"
               FontAttributes="Bold"
               Margin="0,10,0,0"/>

            <Frame CornerRadius="20"
               BackgroundColor="White"
               HasShadow="True"
               Padding="15">

                <Label x:Name="lblObservacoes"
                   FontSize="16"
                   TextColor="Gray"
                   LineBreakMode="WordWrap"/>
            </Frame>

            <!-- Botão PAGAR COM PIX -->
            <Button x:Name="BtnPagarPix"
                Text="Pagar com PIX"
                BackgroundColor="#00B37E"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                IsVisible="False"
                Clicked="OnPagarPixClicked" />


            <!-- Botão Cancelar -->
            <Button x:Name="BtnCancelar"
                Text="Cancelar"
                BackgroundColor="#D32F2F"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                Clicked="OnCancelarClicked" />

            <!-- Botão Reagendar -->
            <Button x:Name="BtnReagendar"
                Text="Reagendar"
                BackgroundColor="#1976D2"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                Clicked="OnReagendarClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>