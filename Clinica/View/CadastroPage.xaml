<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Clinica.View.CadastroPage"
    Shell.NavBarIsVisible="True"
    BackgroundColor="{DynamicResource PageBackgroundColor}">

    <!-- Recursos de Tema (mesmos da LoginPage) -->
    <ContentPage.Resources>

        <Color x:Key="LightBackground">#F4F7FB</Color>
        <Color x:Key="LightCard">#FFFFFF</Color>
        <Color x:Key="LightText">#222222</Color>
        <Color x:Key="LightPlaceholder">#777</Color>
        <Color x:Key="LightPrimary">#5A7DFE</Color>

        <Color x:Key="DarkBackground">#1E1E1E</Color>
        <Color x:Key="DarkCard">#2B2B2B</Color>
        <Color x:Key="DarkText">#FFFFFF</Color>
        <Color x:Key="DarkPlaceholder">#BBBBBB</Color>
        <Color x:Key="DarkPrimary">#8BA2FF</Color>

        <AppThemeBinding x:Key="PageBackgroundColor" Light="{StaticResource LightBackground}" Dark="{StaticResource DarkBackground}" />
        <AppThemeBinding x:Key="CardColor" Light="{StaticResource LightCard}" Dark="{StaticResource DarkCard}" />
        <AppThemeBinding x:Key="TextColorPrimary" Light="{StaticResource LightText}" Dark="{StaticResource DarkText}" />
        <AppThemeBinding x:Key="PlaceholderColor" Light="{StaticResource LightPlaceholder}" Dark="{StaticResource DarkPlaceholder}" />
        <AppThemeBinding x:Key="PrimaryColor" Light="{StaticResource LightPrimary}" Dark="{StaticResource DarkPrimary}" />

    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <!-- Título -->
            <Label Text="Criar Conta"
                   FontSize="36"
                   TextColor="{DynamicResource TextColorPrimary}"
                   FontAttributes="Bold" />

            <!-- Subtítulo -->
            <Label Text="Preencha os dados abaixo"
                   FontSize="18"
                   TextColor="{DynamicResource TextColorPrimary}" />

            <!-- Container -->
            <Frame BackgroundColor="{DynamicResource CardColor}"
                   CornerRadius="25"
                   Padding="25"
                   HasShadow="True">

                <VerticalStackLayout Spacing="22">

                    <!-- Label Email -->
                    <Label Text="Email" FontSize="16" TextColor="{DynamicResource TextColorPrimary}" />

                    <!-- Campo Email -->
                    <Grid ColumnDefinitions="40,*,40"
                          BackgroundColor="#F0F2F5"
                          HeightRequest="55"
                          Padding="5"
                          ColumnSpacing="10">
                        <Label Text="email" FontFamily="MaterialIcons" FontSize="24" VerticalOptions="Center" />

                        <Entry x:Name="EmailEntry"
                               Grid.Column="1"
                               Placeholder="Digite seu email"
                               TextColor="{DynamicResource TextColorPrimary}"
                               PlaceholderColor="{DynamicResource PlaceholderColor}"
                               BackgroundColor="Transparent"
                               FontSize="16" />
                    </Grid>

                    <!-- Label Senha -->
                    <Label Text="Senha" FontSize="16" TextColor="{DynamicResource TextColorPrimary}" />

                    <!-- Campo Senha -->
                    <Grid ColumnDefinitions="40,*,40"
                          BackgroundColor="#F0F2F5"
                          HeightRequest="55"
                          Padding="5"
                          ColumnSpacing="10">
                        <Label Text="lock" FontFamily="MaterialIcons" FontSize="24" VerticalOptions="Center" />

                        <Entry x:Name="SenhaEntry"
                               Grid.Column="1"
                               Placeholder="Digite sua senha"
                               IsPassword="True"
                               TextColor="{DynamicResource TextColorPrimary}"
                               PlaceholderColor="{DynamicResource PlaceholderColor}"
                               BackgroundColor="Transparent"
                               FontSize="16" />

                        <Label x:Name="btnMostrarSenha"
                               Text="visibility"
                               FontFamily="MaterialIcons"
                               Grid.Column="2"
                               FontSize="24"
                               VerticalOptions="Center"
                               HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMostrarSenhaTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>

                    <!-- Label Repetir Senha -->
                    <!-- Label Repetir Senha -->
                    <Label Text="Repetir Senha"
       FontSize="16"
       TextColor="{DynamicResource TextColorPrimary}" />

                    <Grid ColumnDefinitions="40,*,40"
                      BackgroundColor="#F0F2F5"
                      HeightRequest="55"
                      Padding="5"
                      ColumnSpacing="10">

                        <Label Text="lock"
                           FontFamily="MaterialIcons"
                           FontSize="24"
                           VerticalOptions="Center" />

                        <Entry x:Name="RepetirEntry"
                           Grid.Column="1"
                           Placeholder="Repita sua senha"
                           IsPassword="True"
                           FontSize="16"
                           BackgroundColor="Transparent" />

                        <Label x:Name="btnMostrarRepetir"
                           Grid.Column="2"
                           Text="visibility"
                           FontFamily="MaterialIcons"
                           FontSize="24"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMostrarRepetirTapped"/>
                            </Label.GestureRecognizers>
                        </Label>

                    </Grid>


                    <!-- Botão Criar Conta -->
                    <Button Text="Criar Conta"
                            HeightRequest="55"
                            CornerRadius="15"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            TextColor="White"
                            FontSize="20"
                            FontAttributes="Bold"
                            Clicked="OnCriarClicked" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
